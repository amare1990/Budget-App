<p style="color: green"><%= notice %></p>

<div class="categ-index">
  <div class="header header-categ-trans">
    <%= link_to destroy_user_session_path do %>
      <%= image_tag('sign-out.png', class: "icon-signout") %>
    <% end %>
    <h1>Categories</h1>
    <%= image_tag('search.svg', class: "svg") %>
  </div>


 <div class="categ-body">
  <div id="categories">
  <% @categories.each do |category| %>
    <a href=<%= category_my_transactions_path(category_id: category.id) %>>

    <%= render category %>

    </a>

  <% end %>
  </div>
  <p class="new-categ">
    <%= link_to "Add new category",  new_category_path %>
  </p>
 </div>
</div>
