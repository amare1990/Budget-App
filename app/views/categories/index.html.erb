<p style="color: green"><%= notice %></p>

<div class="categ-index">
  <h1>Categories</h1>

  <div id="categories">
    <% @categories.each do |category| %>
      <%= render category %>
      <p>
        <%= link_to "Show this category", category_my_transactions_path(category_id: category.id) %>
      </p>
    <% end %>
  </div>

  <%= link_to "Add new category", new_category_path %>
</div>
